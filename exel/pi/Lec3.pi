module Lec3 where
-- can mark some arguments as irrelevant
-- irrelevant parameters can only appear in types (or as part of irrelevant arguments)

id : [x:Type] -> (y : x) -> x
id = \[x] y. (y : x)

t0 = id [Bool] True

t1 = id [Bool] (id [Bool] True)

id2 : [x:Type] -> (y : x) -> x
id2 = \[x] y. id [x] (y : x)

